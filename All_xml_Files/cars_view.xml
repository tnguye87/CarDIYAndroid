<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    tools:context=".CarView">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text= "CARS VIEW"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/goat"
        android:layout_width="225dp"
        android:layout_height="224dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/car_view_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/addBtn"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="MY GARAGE"
            android:layout_weight="1"
            android:onClick="viewMyGarage"/>

        <Button
            android:id="@+id/deleteDoneBtn"
            android:textStyle="bold"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="ADD NEW CAR"
            android:layout_weight="1"
            android:onClick="addNewCar"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to main"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:onClick="onBackPressed"/>

</LinearLayout>